    }                                         

    private void txtsaldoActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    }                                        
        private void LimparCampos()
    {
        txtnumero.setText("");
        txtsaldo.setText("");
        txtlimite.setText("");
    }
